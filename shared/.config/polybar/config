[colors]

black = #000
darkgrey = #222
lightgrey = #eee
medgrey = #666
red = #0F0

[bar/top]

monitor = ${env:MONITOR}
width = 100%
height = 24
offset-x = 0
offset-y = 0

background = ${colors.darkgrey}
foreground = ${colors.lightgrey}

underline-size = 2
underline-color = ${colors.lightgrey}

spacing = 1
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0

font-0 = Hack:pixelsize=11;2
font-1 = FontAwesome:pixelsize=11;2

modules-left = bspwm cpu memory temperature
modules-center = xwindow
modules-right = battery backlight volume wifi date

wm-restack = bspwm
scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

; MODULES

[module/bspwm]

type = internal/bspwm

pin-workspaces = true

label-focused = 
label-focused-background = ${colors.black}
label-focused-underline = ${colors.lightgrey}
label-focused-padding = 1

label-occupied = 
label-occupied-foreground = ${colors.medgrey}
label-occupied-padding = 1

label-empty = 
label-empty-foreground = ${colors.medgrey}
label-empty-padding = 1

[module/xwindow]
type = internal/xwindow
label = %title:0:80:...%
label-padding = 4

[module/cpu]
type = internal/cpu
interval = 10
format-prefix = " "
format-prefix-foreground = ${colors.lightgrey}
format-margin = 1
format-underline = ${colors.lightgrey}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 10
format-prefix = " "
format-prefix-foreground = ${colors.lightgrey}
format-underline = ${colors.lightgrey}
format-margin = 1
label = %percentage_used%%

[module/temperature]
type = internal/temperature
interval = 10
thermal-zone = 0
warn-temperature = 60

format = <ramp><label>
format-margin = 1
format-underline = ${colors.lightgrey}
label = %temperature%
ramp-0 = ""
ramp-1 = ""
ramp-2 = ""
ramp-3 = ""

format-warn = <label-warn>
format-warn-underline = ${colors.red}
label-warn = %temperature%
label-warn-foreground = ${colors.red}

[module/volume]
type = internal/volume

format-volume = <label-volume>
format-underline = ${colors.lightgrey}
format-volume-margin = 1
label-volume = " %percentage%"
label-volume-underline = ${colors.lightgrey}

label-muted-foreground = ${colors.medgrey}
format-muted = <label-muted>
format-muted-margin = 1
label-muted = " --"
label-muted-underline = ${colors.medgrey}

[module/wifi]
type = internal/network
interface = ${env:WIFI_INTERFACE}
interval = 10

format-connected-prefix = " "
format-connected = <label-connected>
label-connected = %essid%
format-connected-margin = 1
format-connected-underline = ${colors.lightgrey}

format-disconnected-prefix = " "
format-disconnected-prefix-foreground = ${colors.medgrey}
label-disconnected = --
label-disconnected-foreground = ${colors.medgrey}
format-disconnected-margin = 1
format-disconnected-underline = ${colors.medgrey}

[module/date]
type = internal/date

interval = 1

time = %I:%M %p
date = %D
label = %date% %time%
format = <label>
format-margin = 1
format-underline = ${colors.lightgrey}

[module/battery]
type = internal/battery

full-at = 99
battery = BAT0
adapter = AC0
poll-interval = 5

format-charging = <animation-charging><label-charging>
format-discharging = <ramp-capacity><label-discharging>
format-full = <ramp-capacity><label-full>
label-charging = %percentage%
label-discharging = %percentage%
label-full = %percentage%
format-charging-padding = 1
format-discharging-padding = 1
format-full-padding = 1
format-charging-underline = ${colors.lightgrey}
format-discharging-underline = ${colors.lightgrey}
format-full-underline = ${colors.lightgrey}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750

[module/backlight]
type = internal/backlight
card = intel_backlight

format = <label>
label =  %percentage%%
format-underline = ${colors.lightgrey}
format-margin = 1
