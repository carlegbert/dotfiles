{
  "editor.acceptSuggestionOnEnter": "off",
  "editor.suggestOnTriggerCharacters": false,
  "editor.fontFamily": "'Hack', 'Droid Sans Mono', 'monospace', monospace",
  "editor.fontLigatures": true,
  "editor.renderWhitespace": "boundary",
  "editor.minimap.enabled": false,
  "diffEditor.renderSideBySide": true,
  "workbench.colorTheme": "One Monokai",
  "files.exclude": {
    ".mypy_cache/": true,
    "**/*.pyc": true,
    ".browserify-cache/": true,
    "pip-selfcheck.json": true,
    "**/*/__pycache__/": true,
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.rulers": [
      88
    ],
  },
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "/home/cegbert/.local/bin/flake8",
  "python.linting.flake8Args": [
    "--ignore=E501"
  ],
  "python.linting.pep8Enabled": true,
  "python.linting.pep8Path": "/home/cegbert/.local/bin/pep8",
  "python.linting.pep8Args": [
    "--ignore=E501"
  ],
  "python.linting.mypyEnabled": true,
  "python.linting.mypyPath": "/home/cegbert/.local/bin/mypy",
  "python.linting.mypyArgs": [
    // we'll be playing with these two to see which one works best
    "--quick-and-dirty"
    // "--incremental"
  ],
  "python.linting.pylintPath": "/home/cegbert/.local/bin/pylint",
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "/home/cegbert/.local/bin/black",
  "[html]": {
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.formatOnSave": true
  },
  "files.associations": {
    ".envrc": "shellscript",
    // "*.ract": "handlebars"
  },
  "window.zoomLevel": 0,
  "vim.insertModeKeyBindings": [
    {
        "before": ["j", "k"],
        "after": ["<esc>"]
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": ["<esc>"],
      "after": [":nohlsearch<enter>"]
    }
  ]
}
