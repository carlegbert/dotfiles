[user]
    name = Carl Egbert
    email = egbertcarl@gmail.com

[github]
    user = carlegbert

[credential]
    helper = cache --timeout=36000

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    ui = true

[color "diff"]
    meta = yellow bold ul
    frag = cyan bold ul
    old = red bold
    new = green bold

[color "status"]
    added = green
    changed = yellow
    untracked = red

[core]
    excludesfile = ~/.gitignore_global
    editor = $EDITOR
    autocrlf = input

[alias]
    cm = commit -m
    st = status
    co = checkout
    ap = add -p
    cb = checkout -b
    lg = log --graph --pretty=format:'%C(yellow)%h%C(auto)%d%Creset %s %C(white)- %an, %ar%Creset'
    amend = commit --amend --no-edit
    shlg = log --pretty=format:'%h %s' HEAD~5..HEAD
    idiff = diff --word-diff=plain
    cleanup = !git branch --merged | grep -v '\\*\\|master\\|develop' | xargs -n 1 git branch -d
    pushu = push origin -u HEAD

[grep]
    break = true
    heading = true
    lineNumber = true
