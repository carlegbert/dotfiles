#!/bin/sh

OPT=${1:-$SCREENCONFIG}

case "$OPT" in
    "desktop")
        xrandr \
            --output DP-2 --primary --mode 3840x2160 --pos 0x0 --rotate normal \
            --output DVI-D-0 --mode 1920x1200 --pos 3840x678 --rotate left
        ;;
    "wfh")
        xrandr \
            --output eDP-1 --primary --mode 2560x1440 --pos 0x0 --rotate normal \
            --output DP-1-1 --mode 3840x2160 --pos 2560x0 --rotate normal \
            --output DP-1-2 --mode 1920x1200 --pos 6400x0 --rotate left
        ;;
    "laptop")
        xrandr --output eDP-1 --primary --mode 2560x1440 --pos 0x0 --rotate normal \
            --output DP-1 --off \
            --output HDMI-1 --off \
            --output DP-2 --off \
            --output HDMI-2 --off \
            --output DP-1-1 --off \
            --output DP-1-2 --off \
            --output DP-1-3 --off
        ;;
    *)
        echo "configuration $OPT not found." >&2;
esac
