#!/bin/sh

OPT=${1:-$SCREENCONFIG}

case "$OPT" in
    "desktop")
        xrandr \
          --output DP-2 \
            --mode 3840x2160 \
            --pos 0x0 \
            --rotate normal \
            --primary \
          --output HDMI-0 \
              --mode 1920x1200 \
              --pos 3840x556 \
              --rotate left \
          --output DVI-D-0 --off \
          --output HDMI-1 --off \
          --output DP-0 --off \
          --output DP-1 --off \
          --output DP-3 --off
        ;;
    "")
        ;;
    *)
        echo "configuration $OPT not found." >&2;
esac
