[colors]

black = #000
darkgrey = #020303
white = #ced
medgrey = #151615
teal = #56e4c9
red = #F00

[bar/top]
monitor = ${env:MONITOR}

width = 100%
height = 20
offset-x = 0
offset-y = 0

background = ${colors.darkgrey}
foreground = ${colors.teal}

spacing = 0

padding-left = 1
padding-right = 0
module-margin-left = 0
module-margin-right = 0

font-0 = TamzenForPowerline:pixelsize=18;2
font-1 = siji:pixelsize=19;1

underline-size = 2

modules-left = bspwm sepl1 cpu sepl2 memory sepl1 temperature sepl2
modules-center = xwindow
modules-right = sepr2 volume sepr1 wifi sepr2 battery sepr1 backlight sepr2 date sepr1

wm-restack = bspwm
scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

[module/sepl1]
type = custom/text
content = 
content-foreground = ${colors.black}
content-background = ${colors.teal}

[module/sepl2]
type = custom/text
content = 
content-foreground = ${colors.teal}
content-background = ${colors.darkgrey}

[module/sepr1]
type = custom/text
content = %{R}

[module/sepr2]
type = custom/text
content = 

[module/bspwm]
type = internal/bspwm

pin-workspaces = true

label-focused = 
label-focused-underline = ${colors.teal}
label-focused-foreground = ${colors.teal}

label-occupied = 

label-empty = 

[module/cpu]
type = internal/cpu
interval = 10
format-prefix = "%{R} "
format-suffix = "% "
label = "%percentage:02%"

[module/memory]
type = internal/memory
interval = 10
format-prefix = 
format-margin = 1
label = %percentage_used:02%%

[module/temperature]
type = internal/temperature
interval = 10
thermal-zone = 0
warn-temperature = 60

format-prefix = "%{R} "
label = "%temperature-c:02% "

label-warn = %temperature-c:02%
label-warn-prefix = "%{R} "
label-warn-foreground = ${colors.red}

[module/xwindow]
type = internal/xwindow
label-foreground = ${colors.white}
label = %title:0:80:...%
label-padding = 4

[module/battery]
type = internal/battery

full-at = 99
battery = BAT0
adapter = AC0
poll-interval = 5

format-charging = "%{R} <label-charging> "
format-discharging = "%{R} <ramp-capacity><label-discharging> "
format-full = "%{R} <ramp-capacity><label-full> "
label-charging =  %percentage:02%%
label-discharging = %percentage:02%%
label-full = %percentage%%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-0-foreground = ${colors.red}

[module/backlight]
type = internal/backlight
card = intel_backlight

format = <label>
label = %percentage:02%%
format-margin = 1

[module/volume]
type = internal/alsa

format-volume = <label-volume>
label-volume = "%{R} %percentage:02% "

format-muted = <label-muted>
label-muted = "%{R} -- "

[module/wifi]
type = internal/network
interface = ${env:WIFI_INTERFACE}
interval = 10

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
label-connected = %essid:0:15:...%
format-connected-margin = 1
format-connected = <ramp-signal><label-connected>

label-disconnected = 
label-disconnected-foreground = ${colors.teal}
format-disconnected-margin = 1

[module/date]
type = internal/date

interval = 1

time = %I:%M%p
date = %D
label = "%{R} %date%  %time% "
format = <label>
